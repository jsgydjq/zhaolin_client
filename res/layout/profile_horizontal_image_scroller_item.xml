<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="3dp" >

    <LinearLayout
        android:id="@+id/inner_wrapper_scroller"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_image_size"
        android:background="@android:color/transparent"
        android:layout_margin="2dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_scroller"
            android:layout_width="@dimen/default_image_size"
            android:layout_height="@dimen/default_image_size"
            android:padding="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
        <TextView 
            android:id="@+id/name_scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#212120"
            />
        
    </LinearLayout>

</FrameLayout>